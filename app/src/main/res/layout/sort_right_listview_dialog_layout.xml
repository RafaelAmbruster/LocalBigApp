<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="1">

    <LinearLayout android:id="@+id/sort_main_header_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/sorting_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="vertical"
            android:clickable="true">

            <TextView android:id="@+id/txt_header_sorting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/txt_size_large"
                android:text="@string/sort_right_header_text"
                android:textStyle="bold"
                android:padding="@dimen/padding_medium"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_300"/>

        <ListView
            android:id="@+id/sort_listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:choiceMode="multipleChoice"
            android:divider="@null"
            android:layout_weight="1"/>

        <LinearLayout android:id="@+id/sort_apply_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_medium_height"
            android:background="@color/toolbar_bg">

            <Button android:id="@+id/sort_btn_apply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_medium"
                android:text="@string/apply"
                style="?android:borderlessButtonStyle"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>