<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ttf="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/parallaxContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="230dip"
            android:adjustViewBounds="true"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <View
        android:id="@+id/warfog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black50" />

    <View
        android:id="@+id/video_border"
        android:layout_width="match_parent"
        android:layout_height="230dip"
        android:layout_centerInParent="true"
        android:background="@drawable/video_border" />

    <View
        android:id="@+id/button"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:layout_centerInParent="true"
        android:background="@drawable/play" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:layout_above="@+id/video_border"
        android:gravity="center_vertical|center"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"
        android:padding="@dimen/global_spacing_xs"
        android:text="@string/fragment_business_detail_info_title"
        android:textAppearance="@style/TextAppearance.LocalBigApp.Headline" />

</RelativeLayout>
