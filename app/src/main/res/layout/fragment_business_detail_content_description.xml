<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/global_bg_front"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/elevation_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/global_spacing_xxs"
            android:text="@string/fragment_poi_detail_description_title"
            android:textAppearance="@style/TextAppearance.LocalBigApp.Headline" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/dividerHorizontal" />

        <TextView
            android:id="@+id/fragment_poi_detail_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/global_spacing_xs"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/material_grey_800"
            android:textStyle="normal" />

    </LinearLayout>
</android.support.v7.widget.CardView>
